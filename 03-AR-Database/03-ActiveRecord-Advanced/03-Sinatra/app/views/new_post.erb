<div class="newPost">
  <h2>Create a New Post</h2>
  <% if @post.errors.present? %>
    <p>Unable to create the Post. Please review following errors:<br/><strong><%= @post.errors.full_messages.join(' and ') %></strong></p>
  <% end %>
  <form action="/posts" method="post">
    <div>
      <label for="title" class="form-label">Title</label>
      <input type="text" class="form-control" id="title" name="title" value="<%= params[:title] %>" required>
    </div>
    <div>
      <label for="url" class="form-label">URL</label>
      <input type="text" class="form-control" id="url" name="url" value="<%= params[:url] %>" required>
    </div>
    <button type="submit" class="btn btn-primary">Create Post</button>
  </form>
</div>
